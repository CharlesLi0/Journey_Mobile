<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="5dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/facility_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Services"
        android:textSize="16dp"
        android:elevation="10dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bbq_bt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bbq"

        />

    <Button
        android:id="@+id/toilet_bt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/toliet"
        />

    <Button
        android:id="@+id/bin_bt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rubbish_bin"
        />

    <Button
        android:id="@+id/restaurant_bt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/restaurant"

        />

    <Button
        android:id="@+id/supermarket_bt"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/supermarket"


        />







</LinearLayout>